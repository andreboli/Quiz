<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andreoliveira.com.br.quiz.EighthQuestion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="8 - Qual time teve a maior seqüência de títulos na UEFA Champions League?"
        android:layout_margin="40dp"

        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="71dp" />


    <Button
        android:id="@+id/btnEighth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Próxima Pergunta" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEighth"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="110dp">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="checkButton"
            android:checked="true"
            android:text="Barcelona, com três títulos consecutivos" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="checkButton"
            android:text="Manchester United, com três títulos consecutivos" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="checkButton"
            android:text="Milan, com cinco títulos consecutivos" />

        <RadioButton
            android:id="@+id/rbCorreta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="checkButton"
            android:text="Real Madrid, com quatro títulos consecutivos" />
    </RadioGroup>

</RelativeLayout>
